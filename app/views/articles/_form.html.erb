<h2>Create Article</h2>

<%= form_for @article do |f| -%>

	<div class="field">
	  <%= f.label :title, "Title" %><br />
	  <%= f.text_field :title %>
	</div>

	<div class="field">
	  <%= f.label :content, "Content" %><br />
	  <%= f.text_area :content %>
	</div>

	<div class="field">
		<%= f.submit "Submit", :disable_with => 'Submiting...' %>
	</div>

<% end %>